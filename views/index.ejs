<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />

    <title><%= title %></title>
  </head>
  <%- include('partials/nav.ejs') %>
  <body>
    <h1><%= title %></h1>
    <div class="categories">
      <form name="collections">
        Collection
        <input type="radio" name="collection" value="0" checked />All <%
        collections.map((item) => { %>
        <input
          type="radio"
          name="collection"
          value="<%= item.collection_name %>"
        /><%= item.collection_name %> <% }) %>
      </form>
      <form name="woods">
        Wood
        <input type="radio" name="wood" value="0" checked />All <%
        wood.map((item) => { %>
        <input type="radio" name="wood" value="<%= item.wood_name %>" />
        <%= item.wood_name %> <% }) %>
      </form>
      <form name="ftypes">
        Furniture type
        <input type="radio" name="ftype" value="0" checked />All <%
        ftypes.map((item) => { %>
        <input type="radio" name="ftype" value="<%= item.ftype_name %>" />
        <%= item.ftype_name %> <% }) %>
      </form>
      <form name="rooms">
        Rooms
        <input type="radio" name="room" value="0" checked />All <%
        rooms.map((item) => { %>
        <input type="radio" name="room" value="<%= item.room_name %>" />
        <%= item.room_name %> <% }) %>
      </form>
      <!-- TODO change this to be a form submit instead of a function -->
      <button type="submit" onclick="submitCategorySearch()">Filter</button>
    </div>
    <table>
      <tr>
        <th>Quantity</th>
        <th>Product Name</th>
        <th>Wood Type</th>
        <th>SKU</th>
        <th>Furniture Type</th>
        <th>Collection</th>
        <th>Room</th>
      </tr>
      <% inventory.map((item) => { %>
      <tr id="<%= item.finv_id %>">
        <td><%= item.finv_quantity %></td>
        <td><%= item.furn_name %></td>
        <td><%= item.wood_name %></td>
        <td><%= item.finv_sku %></td>
        <td><%= item.ftype_name %></td>
        <td><%= item.collection_name %></td>
        <td><%= item.room_name %></td>
        <td>
          <a href="/product/<%= item.finv_id %>">Edit</a>
        </td>
      </tr>
      <% }) %>
    </table>
    <script src="../index.js"></script>
  </body>
</html>
