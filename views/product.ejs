<!-- views/product.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <%- include('partials/nav.ejs') %>
  <body>
    <% if (alert) { %>
    <div><%= alert %></div>
    <% } %>
    <div>
      <h2>Product name: <%= inventory.furn_name %></h2>
      <p>Wood: <%= inventory.wood_name %></p>
      <p>Furniture Type: <%= inventory.ftype_name %></p>
      <p>Room: <%= inventory.room_name %></p>
      <p>Collection: <%= inventory.collection_name %></p>
      <p>SKU: <%= inventory.finv_sku %></p>
      <p>Quantity: <%= inventory.finv_quantity %></p>
    </div>
    <div>
      <button method="GET" action="/update/<%= inventory.furn_id %>">
        Update
      </button>
      <form
        method="POST"
        action="/delete/<%= inventory.furn_id %>?_method=DELETE"
      >
        <button type="submit">Delete</button>
      </form>
    </div>
  </body>
</html>
